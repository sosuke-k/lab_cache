<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>First image url</th>
      <th>User</th>
      <th>Name</th>
      <th>Content</th>
      <th>Deleted at</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.first_image_url %></td>
        <td><%= item.user %></td>
        <td><%= item.name %></td>
        <td><%= item.content %></td>
        <td><%= item.deleted_at %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

